<apex:page controller="loan_usecase" >
    <apex:sectionHeader title="Loan" subtitle="New Loan"/>
     <apex:pageMessages id="cs"  />
    <apex:form >
        
        <!----------------this is picklist--------------->
        
    <apex:outputlabel value="loantype"  />
    <apex:selectList size="1" value="{!loantype}" id="one">
        <apex:selectOption itemValue="none" itemLabel="--None--" />
        <apex:selectOption itemValue="houseing" itemLabel="Housing"  />
        <apex:selectOption itemValue="education" itemLabel="Education" />
    </apex:selectList>
        &nbsp;
        &nbsp;
        
        <apex:commandButton value="Go!" action="{!go}" reRender="cs" /><!--this is button-->
        
        <!--------------------this is "loan" pageblock ---------  -->
        
        <apex:pageBlock title="Loan" tabStyle="lead"  >
            
            	<!--  ------ this is pageblock buttons   ----->
            
                    <apex:pageBlockButtons location="top">
                        <apex:commandButton value="Submit" />
                        <apex:commandButton value="cancel" action="{!cancel}" reRender="cs"/>
                    </apex:pageBlockButtons>
            
            <!---------this is "customer Datails" pageblocksection------------->
            
        		<apex:pageBlockSection title="Customer Details" collapsible="false"  >
                    <apex:pageBlockSectionItem >
                        <apex:outputlabel value="Last Name" />
                        <apex:inputtext value="{!lastname}" />
                    </apex:pageBlockSectionItem>
                    
                    <apex:pageBlockSectionItem >
                        <apex:outputlabel value="First Name" />
                        <apex:inputtext value="{!firstname}"  />
                    </apex:pageBlockSectionItem>
                    
                    <apex:pageBlockSectionItem >
                        <apex:outputlabel value="Email" />
                        <apex:inputtext value="{!email}"  />
                    </apex:pageBlockSectionItem>
                    
                    <apex:pageBlockSectionItem >
                        <apex:outputlabel value="Phone" />
                        <apex:inputtext value="{!phone}" />
                    </apex:pageBlockSectionItem>
            	</apex:pageBlockSection>
            
            
            <!---------this is "Property Datails" pageblocksection------------->

            <apex:pageBlockSection title="Property Details" collapsible="false" rendered="{!selected=='houseing'}"    >
                    <apex:pageBlockSectionItem >
                        <apex:outputlabel value="Type" />
                        <apex:inputtext value="{!type}" />
                    </apex:pageBlockSectionItem>
                    
                    <apex:pageBlockSectionItem >
                        <apex:outputlabel value="Price" />
                        <apex:inputtext value="{!price}"  />
                    </apex:pageBlockSectionItem>
                    
                    <apex:pageBlockSectionItem >
                        <apex:outputlabel value="Area" />
                        <apex:inputtext value="{!area}"  />
                    </apex:pageBlockSectionItem>
                    
                    <apex:pageBlockSectionItem >
                        <apex:outputlabel value="Locaction" />
                        <apex:inputtext value="{!location}" />
                    </apex:pageBlockSectionItem>
            	</apex:pageBlockSection>
            
            
                        <!---------this is "Education Datails" pageblocksection------------->

            <apex:pageBlockSection title="Education details" collapsible="false" rendered="{!selected=='education'}" >
                    <apex:pageBlockSectionItem >
                        <apex:outputlabel value="qualification" />
                        <apex:inputtext value="{!qualification}" />
                    </apex:pageBlockSectionItem>
                    
                    <apex:pageBlockSectionItem >
                        <apex:outputlabel value="city" />
                        <apex:inputtext value="{!city}"  />
                    </apex:pageBlockSectionItem>
                    
                    <apex:pageBlockSectionItem >
                        <apex:outputlabel value="amount" />
                        <apex:inputtext value="{!amount}"  />
                    </apex:pageBlockSectionItem>
                    
                    <apex:pageBlockSectionItem >
                        <apex:outputlabel value="course" />
                        <apex:inputtext value="{!course}" />
                    </apex:pageBlockSectionItem>
            	</apex:pageBlockSection>

        </apex:pageBlock>
        </apex:form>
</apex:page>